{
  "name": "@mxcins/library",
  "version": "0.0.0-alpha.0",
  "description": "library",
  "homepage": "https://github.com/maxiaochuan/mxcins-tools",
  "bugs": {
    "url": "https://github.com/maxiaochuan/mxcins-tools/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maxiaochuan/mxcins-tools"
  },
  "license": "MIT",
  "types": "src/types.d.ts",
  "bin": {
    "mlib": "./bin/mlib.js"
  },
  "files": [
    "lib",
    "bin",
    "src/types.d.ts"
  ],
  "scripts": {
    "build": "rm -rf lib && tsc",
    "dev": "rm -rf lib && tsc --watch",
    "lint": "eslint --fix '**/*.{js,ts}'",
    "prepublishOnly": "yarn build && np --no-cleanup --yolo --no-publish",
    "prettier": "prettier --write '**/*.{js,ts,jsx,tsx,less,md,json}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@babel/register": "7.9.0",
    "@rollup/plugin-commonjs": "11.0.2",
    "@rollup/plugin-node-resolve": "7.1.1",
    "babel-preset-mxcins": "0.0.1-alpha.5",
    "builtins": "3.0.1",
    "debug": "4.1.1",
    "docz": "2.3.0",
    "mkdirp": "1.0.3",
    "prettier": "2.0.2",
    "rimraf": "3.0.2",
    "rollup": "2.2.0",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-typescript2": "0.27.0",
    "signale": "1.4.0",
    "sort-package-json": "1.40.0",
    "temp-dir": "2.0.0",
    "yargs-parser": "18.1.2"
  },
  "devDependencies": {
    "@mxcins/bedrock": "1.2.5",
    "@types/debug": "4.1.5",
    "@types/node": "13.9.5",
    "@types/prettier": "1.19.1",
    "@types/signale": "1.4.0",
    "husky": "4.2.3",
    "lint-staged": "10.0.8",
    "np": "6.2.0",
    "typescript": "3.8.3"
  },
  "publishConfig": {
    "access": "public"
  },
